.Box {
  overflow: hidden
  border: 1px solid #e0e0e0
  border-radius: 5px
  background: #fff
  box-shadow: 1px 0 5px #f4f4f4

  &__head {
    padding: 20px
    border-bottom: 1px solid #f2f2f2
    background: #f9f9f9
    text-transform: uppercase

    h1,
    h2,
    h3 {
      font-weight: normal
      font-size: $fontSize.default
    }
  }

  &__content {
    padding: 20px
  }
}
