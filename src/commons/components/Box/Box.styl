// @stylint off
$Box = {
  colors: {
    bg: #fff
    border: #e0e0e0
    boxShadow: #f4f4f4
  }
  headColors: {
    bg: #f9f9f9
    border: #f2f2f2
  }
}
// @stylint on

.Box {
  overflow: hidden
  border: 1px solid $Box.colors.border
  border-radius: 5px
  background: $Box.colors.bg
  box-shadow: 1px 0 5px $Box.colors.boxShadow

  &__head {
    padding: 20px
    border-bottom: 1px solid $Box.headColors.border
    background: $Box.headColors.bg
    text-transform: uppercase

    h1,
    h2,
    h3 {
      font-weight: normal
      font-size: $fontSize.default
    }
  }

  &__content {
    padding: 20px
  }
}
