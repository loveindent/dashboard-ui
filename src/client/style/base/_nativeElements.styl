* {
  box-sizing: border-box
}

body {
  background: $colors.bg
  color: $colors.text
  font-size: $fontSize.default
  font-family: 'Montserrat', sans-serif
  line-height: 1.55em
}

p {
  margin: 0

  & + p {
    margin-top: 10px
  }
}

h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0
  text-transform: uppercase
}

h1 + * {
  margin-top: 20px
}
h2 {
  & + p {
    margin-top: 10px
  }

  & + * {
    margin-top: 20px
  }
}

* { // @stylint ignore
  & + h1 {
    margin-top: 40px
  }

  & + h2 {
    margin-top: 30px
  }

  & + h3,
  & + h4,
  & + h5,
  & + h5 {
    margin-top: 20px
  }
}
